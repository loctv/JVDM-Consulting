<!--            <field name="state">code</field>-->
<!--            <field name="code">action = records.run_server()</field>-->
<!--        </record>-->

        <menuitem action="action_server_form" id="menu_server" sequence="2" parent="menu_cmdb"/>

    </data>
</odoo>